@model IEnumerable<DataLayer.Customer>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" > <button id="four">New Customer</button> </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankAccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BankAccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>

                    @item.DateOfBirth.ToString("dd-mm-yyyy")
                </td>
                <td>
                    <a class="btn btn-warning " href="/Customer/Edit/@item.CustomerID">
                        <i class="fa-solid fa-pen fa-beat"></i>
                    </a> <a class="btn btn-info " href="/Customer/Details/@item.CustomerID">
                        <i class="fa-solid fa-info fa-flip"></i>
                    </a> <a class="btn btn-danger " href="/Customer/Delete/@item.CustomerID">
                        <i class="fa-solid fa-trash fa-bounce"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>

    button {
        background-color: green;
        padding: 20px 40px;
        border: 0;
        font-size: 20px;
        color: white;
        
        margin: 20px;
    }

    #four {
        padding: 8px 30px;
        height: 50px;
        border-radius: 6px;
        position: relative;
    }

        #four::after {
            content: "";
            position: absolute;
            width: 5px;
            height: 5px;
            top: 0;
            right: 0;
            /* background: white; */
            border: 2px solid white;
            border-color: green green white white;
            transition: all 1s;
        }

        #four::before {
            content: "";
            position: absolute;
            width: 5px;
            height: 5px;
            bottom: 0;
            left: 0;
            /* background: white; */
            border: 2px solid white;
            border-color: white white green green;
            transition: all 1s;
        }

        #four:hover::before,
        #four:hover::after {
            width: 100%;
            height: 100%;
        }
</style>